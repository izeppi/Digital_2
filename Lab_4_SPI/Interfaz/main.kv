
<Separador>:
    orientation:'vertical'
    BoxLayout:
        size_hint_y:0.2
        orientation:'horizontal'
        Label:
            font_size:35
            text:'Laboratorio # 3'
            color:0,1,0,1
    BoxLayout:
        orientation:'horizontal'
        BoxLayout:
            orientation:'vertical'
            Label:
                font_size:20
                text:'Potenciometro 1'
            Label:
                font_size:25
                text:'Valor'
            Label:
                font_size:15
                text:root.valor_1
        BoxLayout:
            orientation:'vertical'
            Label:
                font_size:20
                text:'Potenciometro 2'
            Label:
                font_size:25
                text:'Valor'
            Label:
                font_size:15
                text:root.valor_3
    BoxLayout:
        orientation:'horizontal'
        size_hint_y:0.2
        Button:
            font_size:40
            text:'-'
            on_release:root.pausa()
        TextInput:
            id: input
            multiline: False
            size_hint_x: 4
            auto_dismiss: True
            hint_text: 'Introducir Valor'
            on_text_validate: app.process()
        Button:
            font_size:40
            text:'+'
            on_release:root.play()
